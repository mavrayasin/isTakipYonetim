@model List<isTakipYonetim.Models.categories>
@{
    ViewBag.Title = "AddNewProject";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddNewProject</title>
</head>
<body>
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box">
                <h4 class="m-t-0 header-title"><b></b></h4>

                <div class="row">
                    <div class="col-lg-12">

                        @using (Html.BeginForm("AddNewProject", "Global", FormMethod.Post, new { enctype = "multipart/form-data", id = "formDosyaPost" }))
                        {
                            <div class="form-group row">
                                <label class="col-md-2 control-label">Project Name</label>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" name="name" required="" placeholder="Projenizin adını giriniz.">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-2 control-label">Project İkon</label>
                                <div class="col-md-10">

                                    <div class="row">

                                        <div class="form-group">

                                            <input type="file" class="filestyle" name="iconFile" id="iconFile" required="" data-buttonbefore="true">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-2 control-label">Description</label>
                                <div class="col-md-10">
                                    <textarea type="text" id="metin" name="description" required="" placeholder="Mesaj İçeriği" class="form-control"></textarea>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-md-2 control-label">Progress</label>
                                <div class="col-md-10">
                                    <input type="number" class="form-control" name="progress" required="" placeholder="Enter the progress % of this project">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-2 control-label"> Category</label>
                                <div class="col-md-10">
                                    <select class="form-control selectpicker" data-live-search="true" id="categoryID" name="categoryID">
                                        @foreach (var item in Model)
                                        {
                                            <option selected="selected" value="@item.ID">@item.categoryName</option>

                                        }

                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-6 control-label"></label>
                                <div class="col-12">
                                    <button class="btn btn-primary btn-rounded w-md waves-effect waves-light m-b-5 btn-sm" type="submit" data-placement="right" title="Add New Project"
                                            style="font-size:15px">
                                        Add
                                    </button>
                                </div>
                            </div>


                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>
</html>



